{
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "testURL": "http://localhost/",
  "testEnvironment": "node",
  "globals": {
    "ts-jest": {
      "tsconfig": {
        "resolveJsonModule": true
      }
    }
  }
}
